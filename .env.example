NODE_ENV=development
PORT=3000
MONGO_URI=mongodb://localhost:27017/docappsys

# JWT secrets (generate long random strings)
JWT_ACCESS_SECRET=replace_with_long_random_string
JWT_REFRESH_SECRET=replace_with_long_random_string

# Token lifetimes
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Bcrypt
BCRYPT_SALT_ROUNDS=12

# Cookie
COOKIE_NAME=jid
COOKIE_SECURE=false      # true in production (requires HTTPS)
COOKIE_PATH=/api/auth/refresh
