  "testing_instructions": {
    "prerequisites": [
      "Make sure MongoDB is running",
      "Start the server: npm run dev or npm start",
      "Server should be running on http://localhost:3000"
    ],
    "testing_sequence": [
      "1. Create appointments using POST requests",
      "2. Get all appointments using GET request",
      "3. Get specific appointment using GET_BY_ID (use IDs from step 2)",
      "4. Delete appointments using DELETE requests (use IDs from step 2)"
    ],
    "curl_examples": {
      "create_appointment": "curl -X POST http://localhost:3000/api/appointments -H \"Content-Type: application/json\" -d '{\"DocID\":\"DOC001\",\"PatientID\":\"PAT001\",\"PatientEmail\":\"john.doe@example.com\",\"PatientAddress\":\"123 Main St, New York, NY 10001\",\"PatientAppointmentDate\":\"2026-01-25T10:00:00.000Z\"}'",
      "get_all_appointments": "curl -X GET http://localhost:3000/api/appointments -H \"Content-Type: application/json\"",
      "get_appointment_by_id": "curl -X GET http://localhost:3000/api/appointments/{id} -H \"Content-Type: application/json\"",
      "delete_appointment": "curl -X DELETE http://localhost:3000/api/appointments/{id} -H \"Content-Type: application/json\""
    }
  },
